class Solution:
    # @param A : list of integers
    # @return an integer
    def solve(self, A):
        max_num =-100000
        for i in range (0,len(A)):
            if max_num<A[i]:
                max_num =A[i]
        count=0
        for i in range (0,len(A)):
            if A[i] ==max_num:
                continue
            else:
                while(A[i] !=max_num):
                    count=count+1
                    A[i]=A[i]+1

        return(count)